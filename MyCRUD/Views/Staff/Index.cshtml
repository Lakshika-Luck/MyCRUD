@model IEnumerable<MyCRUD.Models.Staff>

@{
    ViewBag.Title = "Index";
}

<h2>Staff</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StaffNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BranchNoRef)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StaffNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchNoRef)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StaffNo }) |
            @Html.ActionLink("Details", "Details", new { id = item.StaffNo }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StaffNo })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Create New Staff Member", "Create")